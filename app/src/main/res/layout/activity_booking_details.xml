<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:gravity="top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bookingRoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/BottomCornerRound"
            android:src="@color/darkGreen"
            />


        <TextView
            android:id="@+id/roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Name"
            android:textSize="16dp"
            android:fontFamily="@font/custom_font_inter"
            android:textStyle="bold"
            android:letterSpacing="0.09"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/whiteOpacity"/>



    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/whiteOpacity"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:paddingBottom="20dp"
                android:text="Booking Details"
                android:textColor="@color/darkGreen"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="Name"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field"
                    android:fontFamily="@font/custom_font_inter"
                    android:inputType="textPersonName"
                    android:textColor="@color/darkGreen"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="Email"
                android:textColor="@color/darkGreen"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field"
                    android:fontFamily="@font/custom_font_inter"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/darkGreen"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="Mobile Number"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field"
                    android:fontFamily="@font/custom_font_inter"
                    android:inputType="phone"
                    android:textColor="@color/darkGreen"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="Number of persons per room"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/noOfGuests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field"
                    android:fontFamily="@font/custom_font_inter"
                    android:textColor="@color/darkGreen"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    android:editable="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="Number of Rooms"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/darkGrey"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/decreaseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_green_button"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:backgroundTint="@color/jungleGreen" />

                <TextView
                    android:id="@+id/roomCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="1"
                    android:textColor="@color/darkGreen"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/increaseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_green_button"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:backgroundTint="@color/jungleGreen" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="Check-in Date"
                android:layout_marginBottom="10dp"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:background="@color/darkGrey"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/date"
                    android:layout_width="250dp"
                    android:background="@color/darkGrey"
                    android:layout_height="wrap_content"
                    android:hint="Date-Month-Year"
                    android:fontFamily="@font/custom_font_inter"
                    android:textSize="16sp"
                    android:textColor="@color/darkGreen" />

                <ImageView
                    android:id="@+id/datePicker"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/date_picker"

                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="Check-Out-Date"
                android:layout_marginBottom="10dp"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:background="@color/darkGrey"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/checkOutDate"
                    android:layout_width="250dp"
                    android:background="@color/darkGrey"
                    android:layout_height="wrap_content"
                    android:hint="Date-Month-Year"
                    android:fontFamily="@font/custom_font_inter"
                    android:textSize="16sp"
                    android:textColor="@color/darkGreen" />

                <ImageView
                    android:id="@+id/datePickerOut"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/date_picker"


                    />
            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:id="@+id/totalAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="Total Amount: $"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.05"
                android:text="0.00"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:textStyle="bold" />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_green_button"
                    android:letterSpacing="0.08"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/darkGreen"/>

                <Button
                    android:id="@+id/confirmButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_green_button"
                    android:letterSpacing="0.08"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/darkGreen" />

            </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>