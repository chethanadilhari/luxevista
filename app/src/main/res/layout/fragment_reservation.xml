<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/promotionsImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/CornerRound"
            app:srcCompat="@drawable/map" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Address"
                android:letterSpacing="0.07"
                android:textColor="@color/jungleGreen"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/custom_font_inter"
                android:letterSpacing="0.07"
                android:text="Başkomutan, Atatürk Cd. No:141, 07400 Kemer/Antalya, Türkiye,"
                android:textColor="@color/darkGreen"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/locationButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.08"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_button"
                android:text="Location"
                android:drawableLeft="@drawable/location"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/jungleGreen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Reservation &amp;  Contact"
                android:letterSpacing="0.07"
                android:textColor="@color/jungleGreen"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mobileButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:letterSpacing="0.08"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_button"
                android:text="+90  549  781  99  51"
                android:drawableLeft="@drawable/phone"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/darkGreen" />

            <Button
                android:id="@+id/whatsappButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:letterSpacing="0.08"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_button"
                android:text="info@luxevista.com"
                android:drawableLeft="@drawable/email"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/darkGreen" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>