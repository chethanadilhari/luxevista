<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customGrey"
    tools:context=".RoomsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/roomImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/booking_bg"
                app:shapeAppearance="@style/BottomCornerRound" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/horizontal_logo" />

            <TextView
                android:id="@+id/bookingSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="16dp"
                android:letterSpacing="0.09"
                android:paddingBottom="20dp"
                android:text="Book Your Perfect Stay â€“ Comfort, Luxury, and Unforgettable Experiences Await!"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/jungleGreen"
                android:padding="16dp">

                <TextView
                    android:id="@+id/roomName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Room Booking"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/custom_font_inter"
                        android:letterSpacing="0.05"
                        android:text="Check-in Date:"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextCheckInDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_field"
                        android:inputType="date"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/custom_font_inter"
                        android:letterSpacing="0.05"
                        android:layout_marginTop="16dp"
                        android:text="Check-out Date:"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextCheckOutDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_field"
                        android:inputType="date"
                        android:padding="8dp"
                       />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/custom_font_inter"
                        android:letterSpacing="0.05"
                        android:layout_marginTop="16dp"
                        android:text="Pax:"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextPaxCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_field"
                        android:inputType="number"
                        android:padding="8dp"
                        android:layout_marginBottom="5dp" />

                    <Button
                        android:id="@+id/checkAvailabilityButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Check Availability"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/darkGreen"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="5dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Your Room"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/jungleGreen"
                    android:paddingBottom="8dp"/>

                <!-- Table Layout for Room Selection -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="8dp">

                    <!-- Table Header -->
                    <TableRow android:background="@color/jungleGreen">
                        <TextView
                            android:text="Room Type"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Max Pax"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Price"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Available"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Qty"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>
                    </TableRow>

                    <!-- Rows for Different Room Types -->
                    <TableRow>
                        <TextView android:text="Standard Room" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="2 Pax" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="$100" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="5" android:textSize="14sp" android:padding="8dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <Button
                                android:id="@+id/btn_minus_standard"
                                android:text="-"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/darkGreen"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/txt_qty_standard"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_width="40dp"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                            <Button
                                android:id="@+id/btn_plus_standard"
                                android:text="+"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/darkGreen"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Deluxe Room" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="4 Pax" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="$150" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="3" android:textSize="14sp" android:padding="8dp"/>
                        <LinearLayout android:orientation="horizontal" android:padding="4dp">
                            <Button
                                android:id="@+id/btn_minus_deluxe"
                                android:text="-"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/darkGreen"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/txt_qty_deluxe"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_width="40dp"
                                android:gravity="center"/>
                            <Button
                                android:id="@+id/btn_plus_deluxe"
                                android:text="+"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/darkGreen"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Family Room" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="6 Pax" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="$200" android:textSize="14sp" android:padding="8dp"/>
                        <TextView android:text="2" android:textSize="14sp" android:padding="8dp"/>
                        <LinearLayout android:orientation="horizontal" android:padding="4dp">
                            <Button
                                android:id="@+id/btn_minus_family"
                                android:text="-"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/darkGreen"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/txt_qty_family"
                                android:text="0"
                                android:textSize="16sp"
                                android:layout_width="40dp"
                                android:gravity="center"/>
                            <Button
                                android:id="@+id/btn_plus_family"
                                android:text="+"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/darkGreen"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </TableRow>

                    <!-- Add Similar Rows for Sea View, Garden View, Pool View -->

                </TableLayout>

                <!-- Max Pax Validation -->
                <TextView
                    android:id="@+id/txt_max_pax_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Pax limit reached!"
                    android:textColor="@color/jungleGreen"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Cart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/jungleGreen"
                    android:paddingBottom="8dp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:background="@color/white"
                    android:padding="8dp">

                    <!-- Table Header -->
                    <TableRow android:background="@color/jungleGreen">
                        <TextView
                            android:text="Room Type"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>

                        <TextView
                            android:text="User Pax"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Max Pax"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Price"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="8dp"/>
                    </TableRow>

                    <!-- Selected Room Details (Dynamic Data Should Be Added Here) -->
                    <TableRow>
                        <TextView
                            android:id="@+id/txt_cart_room"
                            android:text="Standard Room"
                            android:textSize="14sp"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/txt_cart_user_pax"
                            android:text="2"
                            android:textSize="14sp"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/txt_cart_max_pax"
                            android:text="2"
                            android:textSize="14sp"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/txt_cart_price"
                            android:text="$100"
                            android:textSize="14sp"
                            android:padding="8dp"/>
                    </TableRow>

                    <!-- Total Price Row -->
                    <TableRow>
                        <TextView
                            android:text="Total Price:"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:layout_span="3"/>

                        <TextView
                            android:id="@+id/txt_total_price"
                            android:text="$100"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkGreen"
                            android:padding="8dp"/>
                    </TableRow>

                </TableLayout>

                <!-- Max Pax Warning -->
                <TextView
                    android:id="@+id/txt_pax_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User pax exceeds max allowed!"
                    android:textColor="@color/darkGreen"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Book Now Button -->
        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:backgroundTint="@color/darkGreen"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:enabled="false"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>


</ScrollView>